<div class="page-header">
  <h1>
    Events
<!-- btn-success -->
    <a href="/events/new" class="btn btn-lg btn-success">New Event</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th></th>

        <th>Title</th>

        <th>Description</th>

        <th>Address</th>

        <th>Neighborhood</th>

        <th>Number of spots</th>

        <th>Held at</th>

        <th>Posted</th>

        <th>Public private</th>

        <th>Flakiness bar</th>

        <th>Creator</th>

        <th>Actions</th>
      </tr>

      <% @events.each do |event| %>
      <tr>

        <td><img src="<%= event.image_url%>" width="80"></td>

        <td><%= event.title %></td>

        <td><%= event.description %></td>

        <td><%= event.street %></td>

        <td><%= event.neighborhood %></td>

        <td><%= event.number_of_spots %></td>

        <td><%= event.date_time.strftime('%a %b %e,  %Y at %l:%M %p') %></td>

        <td><%= time_ago_in_words(event.created_at) %> ago</td>




        <td><%= event.public_private %></td>

        <td><%= event.flakiness_bar %></td>

        <td><%= event.user.email %></td>

        <td>

          <a href="/events/<%= event.id %>" class="btn btn-primary">Show</a>

          <a href="/events/<%= event.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event/<%= event.id %>" class="btn btn-danger" rel="nofollow">Delete</a>


        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
