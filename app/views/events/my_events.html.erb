<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <a href="/events/new" class="btn btn-default btn-success btn-block">
      <i class="fa fa-plus"></i>
    </a>

    <hr>
  </div>
</div>

<% @events.each do |event| %>
<% event.responses.each do |response| %>

<% if response.user_id == current_user.id && response.event_response == "Accepted"  %>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h1 class="panel-title">
            <a href="/events/<%= event.id %>"> <strong> <%= event.title %> </strong></a>

          <small> <em>
            @ <%= (User.find_by id: event.user_id).email %>
          </emd></small>
          <% if current_user.id == event.user_id %>
          <a href="/delete_event/<%= event.id %>"  data-toggle="tooltip" data-placement="bottom" title="Warning: This will permanantly delete the event, no going back!!!"> <span class="pull-right"><i class="fa fa-trash-o " aria-hidden="true"></i></span> </a>
          <% else %>
          <a href="/back_out_invite/<%= event.id %>" data-toggle="tooltip" data-placement="bottom" title="Warning: Backing out of an invite will hurt your flakiness score!!">
          <span class="glyphicon glyphicon-log-out pull-right"></span>
          <span class="pull-right">Back out of event &nbsp;</span>
          </a>
          <% end %>
          </h1>
            <h1 class="panel-title">
              <%= event.date_time.strftime('%b %e, %C%y @ %l:%M%P') %>
              <span class="pull-right">10 Accepted | <%=event.number_of_spots%> Spots Left</span>
        </h1>
      </div>


      <div class="panel-body">
          <a href="/events/<%= event.id %>"> <img  src="<%=event.image_url%>" class="img-responsive" style='width:100%' height= "auto">
        </a>
      </div>
    </div>
  </div>
  </div>

<% end %>
<% end %>
<% end %>
