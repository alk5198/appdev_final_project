<div class="page-header">
  <h1>
    Event comments

    <a href="/event_comments/new" class="btn btn-lg btn-success">New Event comment</a>

  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>

        <th>User</th>

        <th>Event</th>

        <th>Content</th>

        <th>Actions</th>
      </tr>

      <% @event_comments.each do |event_comment| %>
      <tr>

        <td><%= event_comment.user_id %></td>

        <td><%= event_comment.event_id %></td>

        <td><%= event_comment.content %></td>

        <td>

          <a href="/event_comments/<%= event_comment.id %>" class="btn btn-primary">Show</a>

          <a href="/event_comments/<%= event_comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_event_comment/<%= event_comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>


        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
